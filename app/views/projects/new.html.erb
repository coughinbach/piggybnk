<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="form-post">
        <h1>Add a Piggybnk</h1>
        <%= simple_form_for [@project] do |f| %>
        <div class="row">
          <div class="col-xs-12">
            <%= f.input :name%>
          </div>
          <div class="col-xs-12">
            <%= f.input :due_date %>
          </div>
          <div class="col-xs-12">
            <%= f.input :description %>
          </div>
          <div class="col-xs-12">
            <%= f.input :goal_amount_total_cents %>
          </div>
          <div class="col-xs-12">
            <%= f.association :users, as: :select, label_method: :username %>
          </div>
          <div class="col-xs-12">
            <%= f.association :category, as: :radio_buttons %>
          </div>
          <%= f.submit "Add project", class: "btn btn-new-project" %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%#= f.association :category, as: :radio_buttons %>

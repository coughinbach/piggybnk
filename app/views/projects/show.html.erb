<div class="container">
  <div class="row">
    <div class="col-xs-12" id="card-project-margin">
          <div class="card-project">
            <div class="flexhome">
              <div class="category-picture"><%= image_tag @project.category.photo %></div>
              <div class="card-info">
                <div class="card-title"><%= link_to @project.name, project_path(@project) %></div>
                <div class="card-date">ðŸ“… <%= @project.due_date %></div>
              </div>
            </div>
              <div class="amounts-home">
                <div class="card-amount">ðŸŽ¯ <%= @project.goal_amount_total_cents %>â‚¬</div>
                <div class="goal-amount-total-home"><%= @project.saved_amount_total_cents %>â‚¬ saved</div>
              </div>
              <div class="progress">
                <div class="progress-bar" role="progressbar" style="width: <%= @project.completion_percentage %>%" aria-valuenow="<%= @project.saved_amount_total_cents %>" aria-valuemin="0" aria-valuemax="<% @project.goal_amount_total_cents %>"></div>
              </div>
          </div>
        </div>
        <div class="amounts-home">
          <div class="card-amount">ðŸŽ¯ <%= humanized_money_with_symbol(@project.goal_amount_total) %></div>
          <div class="goal-amount-total-home"><%= humanized_money_with_symbol(@project.saved_amount_total) %> saved</div>
        </div>
        <div class="progress">
          <div class="progress-bar"
                role="progressbar"
                style='width: <%= (@project.saved_amount_total_cents.to_f * 100).fdiv(@project.goal_amount_total_cents) %>%;'
                aria-valuenow="<%= @project.saved_amount_total_cents %>"
                aria-valuemin="0"
                aria-valuemax="<% @project.goal_amount_total_cents %>"></div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12 three-cards">
      <div class="card-project">
        <%= humanized_money_with_symbol((@project.goal_amount_total - @project.saved_amount_total) / (@project.due_date - @project.created_at.to_date).to_i) %>
        <br><span class="focus-info-show">per day</span>
      </div>
      <div class="card-project">
        <%= (@project.saved_amount_total_cents.to_f * 100.fdiv(@project.goal_amount_total_cents)).round(0) %>%
          <br><span class="focus-info-show">saved</span>
      </div>
      <div class="card-project">
        <%= (@project.due_date - Date.today).to_i %>
        <br><span class="focus-info-show">days left</span>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="card-project">
        <div class="flexhome">
          <div class="description-show"><span class="card-title">Description</span>
          <br><%= @project.description %></div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="card-project">
        <div class="card-title" id="leader-title">Leaderboard</div>
          <div class="flex-social-area">
              <% @project.users.each do |user| %>
            <div class="flex-test">
                <div class="fusee-emoji">ðŸš€</div>
                <div class="progress social vertical">
                  <div class="progress-bar-social progress-bar-info" role="progressbar" style="width: 40%;">
                  </div>
                </div>
                <div class="avatar-social">
                  <% if user.facebook_picture_url %>
                    <span class="fb-avatar"><%= image_tag user.facebook_picture_url %></span>
                  <% else %>
                    <%= image_tag "default-user.png" %>
                  <% end %>
                </div>
            </div>
              <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="card-project">
        <%= render 'form' %>
      </div>
    </div>
  </div>
</div>
